extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block content
  .container.my-3
    .row
      .col-12
        +box-head('Danh sách sản phẩm')
    // list product from products
    .row
      each product in products
        .col-4.mb-3
          .product-item
            .inner-image
              img(src=product.thumbnail, alt=product.title)
            .inner-content
              h3.inner-title= product.title
              p.inner-price= product.price
              p.inner-discount= product.discount
              p.inner-status= product.status
    

