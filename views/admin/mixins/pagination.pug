mixin pagination(pagination)
    .nav 
        ul.pagination
            li(class="page-item #{pagination.currentPage === 1 ? 'inactive' : ''}" button-pagination=(pagination.currentPage === 1 ? 1 : (pagination.currentPage - 1)))
                a(class="page-link") Trang trước
            - for (var i = 1; i <= pagination.totalPage; i++)
                li(class="page-item #{pagination.currentPage === i ? 'active' : ''}" button-pagination=(i))
                    a(class="page-link") #{i}
            li(class="page-item #{pagination.currentPage === pagination.totalPage ? 'inactive' : ''}" button-pagination=(pagination.currentPage + 1))
                a(class="page-link") Trang sau